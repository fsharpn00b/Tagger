<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="LeftSidebarColumn" Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Name="RightSidebarColumn" Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Expander Name="LeftSidebar" Grid.Column="0" ExpandDirection="Right" />
        <ContentControl Name="CenterArea" Grid.Column="1" />
        <GridSplitter Name="RightResize" Grid.Column="2" Background="Green" Width="5" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>
        <Expander Name="RightSidebar" Grid.Column="3" ExpandDirection="Left" />
    </Grid>
</UserControl>
